{
  "compilerOptions": {
    "target": "ESNext", // Use the latest ECMAScript features
    "module": "CommonJS", // Specify module code generation
    "rootDir": "src", // Root directory of source files
    "outDir": "dist", // Output directory for compiled files
    // "strict": true, // Enable all strict type-checking options
    // "esModuleInterop": true, // Allow default imports from modules without default exports
    // "skipLibCheck": true // Skip type checking for declaration files
    "lib": ["es2020"],
    // "target": "es2020",
    // "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": [
    "src", // Include source files
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]

}